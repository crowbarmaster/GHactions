{
  "name": "github-actions",
  "version": "0.0.0",
  "author": "Marvin Pinto/Crowbarmaster",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crowbarmaster/GHactions.git"
  },
  "config": {
    "eslintPaths": ".*.js *.js",
    "prettierPaths": "*.{json,md,yaml,yml} .github/**/*.{json,md,yaml,yml} !package.json !lerna.json"
  },
  "scripts": {
    "test": "yarn jest --env=node --colors",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream && rm -rf node_modules yarn-error.log",
    "reinstall": "yarn clean; yarn install --frozen-lockfile",
    "lint": "lerna run lint --stream && yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint --max-warnings=0 .*.js *.js",
    "lint:prettier": "prettier --list-different *.{json,md,yaml,yml} .github/**/*.{json,md,yaml,yml} !package.json !lerna.json",
    "lintfix": "lerna run lintfix --stream && yarn run lintfix:eslint && yarn run lintfix:prettier",
    "lintfix:eslint": "eslint --fix  .*.js *.js",
    "lintfix:prettier": "prettier --write *.{json,md,yaml,yml} .github/**/*.{json,md,yaml,yml} !package.json !lerna.json",
    "release": "lerna version"
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=18.0.0 <19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "lerna": "^7.2.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "eslintIgnore": [
    "!.*.js"
  ],
  "dependencies": {
    "yarn": "^1.22.19"
  },
  "packageManager": "yarn@3.6.3"
}
