{
  "name": "cbgh-automatic-releases",
  "version": "1.3.0",
  "private": true,
  "description": "Generate automatic releases whenever changes land on master",
  "main": "dist/index.js",
  "license": "MIT",
  "config": {
    "eslintPaths": "src/**/*.ts .*.js *.js",
    "prettierPaths": "**/*.{json,md,yaml,yml} !package.json"
  },
  "engines": {
    "npm": "^>=9.0.0",
    "node": "^>=18.0.0"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js --color",
    "clean": "rm -rf node_modules yarn-error.log dist",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint --color --max-warnings=0 src/**/*.ts .*.js *.js",
    "lint:prettier": "prettier --color --list-different **/*.{json,md,yaml,yml} !package.json",
    "lintfix": "yarn run lintfix:eslint && yarn run lintfix:prettier", 
    "lintfix:eslint": "eslint --color --fix src/**/*.ts .*.js *.js",
    "lintfix:prettier": "prettier --color --write **/*.{json,md,yaml,yml} !package.json"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^18.12.0",
    "@octokit/types": "^6.41.0",
    "axios": "^0.21.4",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-commits-parser": "^3.2.4",
    "globby": "^11.1.0",
    "md5-file": "^5.0.0",
    "semver": "^7.5.4",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "express": "^4.18.2",
    "nock": "^13.3.3",
    "portfinder": "^1.0.32",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.10",
    "webpack": "^4.47.0",
    "webpack-cli": "^3.3.12",
    "which": "^2.0.2"
  },
  "eslintIgnore": [
    "!.*.js"
  ]
}
