{
  "name": "cbgh-automatic-releases",
  "version": "1.4.1",
  "private": true,
  "description": "Generate automatic releases whenever changes land on master",
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "npm": "^>=9.0.0",
    "node": ">=18.0.0 <19.0.0"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js --color",
    "clean": "rm -rf node_modules yarn-error.log dist",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint --color --max-warnings=0 src/**/*.ts .*.js *.js",
    "lint:prettier": "prettier --color --list-different **/*.{json,md,yaml,yml} !package.json",
    "lintfix": "yarn run lintfix:eslint && yarn run lintfix:prettier",
    "lintfix:eslint": "eslint --color --fix src/**/*.ts .*.js *.js",
    "lintfix:prettier": "prettier --color --write **/*.{json,md,yaml,yml} !package.json"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^20.0.1",
    "@octokit/types": "^11.1.0",
    "axios": "^1.5.0",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-commits-parser": "^5.0.0",
    "globby": "^13.2.2",
    "md5-file": "^5.0.0",
    "semver": "^7.5.4",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "express": "^4.18.2",
    "nock": "^13.3.3",
    "portfinder": "^1.0.32",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "which": "^4.0.0"
  },
  "eslintIgnore": [
    "!.*.js"
  ]
}
